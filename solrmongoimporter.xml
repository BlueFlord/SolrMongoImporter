<?xml version="1.0" encoding="UTF-8"?>
<project name="solrmongoimporter" default="all">
  
  
  <property file="solrmongoimporter.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <include name="**/?*.properties"/>
    <include name="**/?*.xml"/>
    <include name="**/?*.gif"/>
    <include name="**/?*.png"/>
    <include name="**/?*.jpeg"/>
    <include name="**/?*.jpg"/>
    <include name="**/?*.html"/>
    <include name="**/?*.dtd"/>
    <include name="**/?*.tld"/>
    <include name="**/?*.ftl"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.6" value="${jdk.home.1.6}/bin"/>
  <path id="jdk.classpath.1.6">
    <fileset dir="${jdk.home.1.6}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/alt-rt.jar"/>
      <include name="jre/lib/alt-string.jar"/>
      <include name="lib/ant.jar"/>
      <include name="lib/commons-io-2.4/commons-io-2.4.jar"/>
      <include name="lib/slf4j-api-1.6.6.jar"/>
      <include name="lib/tika-app-1.2.jar"/>
      <include name="lib/mongo-2.8.0.jar"/>
      <include name="lib/apache-solr-dataimporthandler-3.6.1.jar"/>
      <include name="lib/junit-4.10.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.6}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.6}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.6"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm.jar"/>
    <pathelement location="${javac2.home}/asm-commons.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module SolrMongoImporter -->
  
  <dirname property="module.solrmongoimporter.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.solrmongoimporter" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.solrmongoimporter" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.solrmongoimporter" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.solrmongoimporter" value="${compiler.args}"/>
  
  <property name="solrmongoimporter.output.dir" value="${module.solrmongoimporter.basedir}/out/production/SolrMongoImporter"/>
  <property name="solrmongoimporter.testoutput.dir" value="${module.solrmongoimporter.basedir}/out/test/SolrMongoImporter"/>
  
  <path id="solrmongoimporter.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="solrmongoimporter.module.production.classpath">
    <path refid="${module.jdk.classpath.solrmongoimporter}"/>
  </path>
  
  <path id="solrmongoimporter.runtime.production.module.classpath">
    <pathelement location="${solrmongoimporter.output.dir}"/>
  </path>
  
  <path id="solrmongoimporter.module.classpath">
    <path refid="${module.jdk.classpath.solrmongoimporter}"/>
    <pathelement location="${solrmongoimporter.output.dir}"/>
  </path>
  
  <path id="solrmongoimporter.runtime.module.classpath">
    <pathelement location="${solrmongoimporter.testoutput.dir}"/>
    <pathelement location="${solrmongoimporter.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.solrmongoimporter">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.solrmongoimporter">
    <patternset refid="excluded.from.module.solrmongoimporter"/>
  </patternset>
  
  <path id="solrmongoimporter.module.sourcepath">
    <dirset dir="${module.solrmongoimporter.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.solrmongoimporter" depends="compile.module.solrmongoimporter.production,compile.module.solrmongoimporter.tests" description="Compile module SolrMongoImporter"/>
  
  <target name="compile.module.solrmongoimporter.production" depends="register.custom.compilers" description="Compile module SolrMongoImporter; production classes">
    <mkdir dir="${solrmongoimporter.output.dir}"/>
    <javac2 destdir="${solrmongoimporter.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.solrmongoimporter}/javac">
      <compilerarg line="${compiler.args.solrmongoimporter}"/>
      <bootclasspath refid="solrmongoimporter.module.bootclasspath"/>
      <classpath refid="solrmongoimporter.module.production.classpath"/>
      <src refid="solrmongoimporter.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.solrmongoimporter"/>
    </javac2>
    
    <copy todir="${solrmongoimporter.output.dir}">
      <fileset dir="${module.solrmongoimporter.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.solrmongoimporter.tests" depends="register.custom.compilers,compile.module.solrmongoimporter.production" description="compile module SolrMongoImporter; test classes" unless="skip.tests"/>
  
  <target name="clean.module.solrmongoimporter" description="cleanup module">
    <delete dir="${solrmongoimporter.output.dir}"/>
    <delete dir="${solrmongoimporter.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.solrmongoimporter" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.solrmongoimporter" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.solrmongoimporter:jar" value="${basedir}/out/artifacts/SolrMongoImporter_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.SolrMongoImporter.jar" value="${artifacts.temp.dir}/SolrMongoImporter.jar"/>
  </target>
  
  <target name="artifact.solrmongoimporter:jar" depends="init.artifacts, compile.module.solrmongoimporter" description="Build &#39;SolrMongoImporter:jar&#39; artifact">
    <property name="artifact.temp.output.solrmongoimporter:jar" value="${artifacts.temp.dir}/SolrMongoImporter_jar"/>
    <mkdir dir="${artifact.temp.output.solrmongoimporter:jar}"/>
    <jar destfile="${temp.jar.path.SolrMongoImporter.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${solrmongoimporter.output.dir}"/>
      <zipfileset file="${basedir}/META-INF/MANIFEST.MF" prefix="META-INF"/>
    </jar>
    <copy file="${temp.jar.path.SolrMongoImporter.jar}" tofile="${artifact.temp.output.solrmongoimporter:jar}/SolrMongoImporter.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.solrmongoimporter:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.solrmongoimporter:jar}"/>
    <copy todir="${artifact.output.solrmongoimporter:jar}">
      <fileset dir="${artifact.temp.output.solrmongoimporter:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>